const int LED1_PIN = 9;
const int LED2_PIN = 10;
const int LED3_PIN = 11;

const int BUTTON1_PIN = 2;
const int BUTTON2_PIN = 3;
const int BUTTON3_PIN = 4;

unsigned long lastPrintTime = 0;
const unsigned long PRINT_INTERVAL = 1000;

byte ledState = 0;

void setup() {
  DDRB |= (1 << DDB1);
  DDRB |= (1 << DDB2);
  DDRB |= (1 << DDB3);
  
  DDRD &= ~(1 << DDD2);
  PORTD |= (1 << PORTD2);
  DDRD &= ~(1 << DDD3);
  PORTD |= (1 << PORTD3);
  DDRD &= ~(1 << DDD4);
  PORTD |= (1 << PORTD4);
  
  Serial.begin(9600);
}

void printBinary(byte value) {
  Serial.print("B");
  for (int i = 7; i >= 0; i--) {
    Serial.print(bitRead(value, i));
  }
}

void loop() {
  byte portDState = PIND;
  byte buttonByte = 0;
  
  if (!(portDState & (1 << PIND2))) buttonByte |= (1 << 0);
  if (!(portDState & (1 << PIND3))) buttonByte |= (1 << 1);
  if (!(portDState & (1 << PIND4))) buttonByte |= (1 << 2);
  
  if (millis() - lastPrintTime >= PRINT_INTERVAL) {
    Serial.print("Кнопки: ");
    printBinary(buttonByte);
    Serial.print(" | ");
    
    if (buttonByte & (1 << 0)) Serial.print("1 ");
    if (buttonByte & (1 << 1)) Serial.print("2 ");
    if (buttonByte & (1 << 2)) Serial.print("3 ");
    
    Serial.println();
    
    lastPrintTime = millis();
  }
  
  if (buttonByte != ledState) {
    ledState = buttonByte;
    
    byte mask = (1 << PORTB1) | (1 << PORTB2) | (1 << PORTB3);
    PORTB &= ~mask;
    
    if (buttonByte & (1 << 0)) PORTB |= (1 << PORTB1);
    if (buttonByte & (1 << 1)) PORTB |= (1 << PORTB2);
    if (buttonByte & (1 << 2)) PORTB |= (1 << PORTB3);
  }
  
  delay(50);
}
